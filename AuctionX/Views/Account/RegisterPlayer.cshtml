@model AuctionX.ViewModels.RegisterPlayerViewModel
@{
    ViewData["Title"] = "Register as Player";
}

<h2>Register as Player</h2>

<form asp-action="RegisterPlayer" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" value="@TempData["Name"]" />
        <span asp-validation-for="Name" class="text-danger" />
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" value="@TempData["Email"]" />
        <span asp-validation-for="Email" class="text-danger" />
    </div>

    <div class="form-group">
        <label>Password</label>
        <input asp-for="Password" class="form-control" type="password"
               minlength="8" required />
        <span asp-validation-for="Password" class="text-danger" />
    </div>

    <div class="form-group">
        <label>Mobile Number</label>
        <input asp-for="MobileNumber" class="form-control"
               pattern="^\d{10}$" title="Enter a valid 10-digit mobile number." required />
        <span asp-validation-for="MobileNumber" class="text-danger" />
    </div>

    <div class="form-group">
        <label>Description</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger" />
    </div>

    <div class="form-group">
        <label>Upload Photo</label>
        <input type="file" name="Photo" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Register</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
}