@model AuctionX.ViewModels.PlayerBidderViewModel

@{
    ViewData["Title"] = "Player Bidder Dashboard";
}

<h2>@Model.Player.User.Name's Dashboard</h2>
<li><a asp-controller="Player" asp-action="Notifications" class="nav-link">Notifications</a></li>
<div class="row">
    <div class="col-md-6">
        <h3>Player Details</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Mobile</th>
                    <th>Description</th>
                    <th>Availability Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Player.User.Name</td>
                    <td>@Model.Player.MobileNumber</td>
                    <td>@Model.Player.Description</td>
                    <td>@Model.Player.AvailabilityStatus</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="col-md-6">
        <h3>Bidder Details</h3>
        @if (Model.Bidder != null)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Team</th>
                        <th>Tournament</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Bidder.Team.TeamName</td>
                        <td>@Model.Bidder.Tournament.Name</td>
                    </tr>
                </tbody>
            </table>
        }
        else
        {
            <p>You are not currently bidding in any tournament.</p>
        }
    </div>
</div>
