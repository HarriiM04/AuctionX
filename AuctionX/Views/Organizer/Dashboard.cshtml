@model AuctionX.ViewModels.OrganizerDashboardViewModel

@{
    ViewData["Title"] = "Organizer Dashboard";
}



<div class="container">
    <h1>Organizer Dashboard</h1>

    @if (ViewBag.WelcomeMessage != null)
    {
        <div class="alert alert-success">
            @ViewBag.WelcomeMessage
        </div>
    }

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Tournaments</h5>
                    <p class="card-text">@Model.Tournaments.Count</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Teams</h5>
                    <p class="card-text">@Model.Teams.Count</p>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Players</h5>
                    <p class="card-text">@Model.TotalPlayers</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 text-center">
        <p class="text-muted">
            organize the epic tournaments with ease of control.
        </p>
    </div>

    <div class="mt-4 text-center">
        <p class="text-muted">

        </p>
    </div>
</div>

<style>
    .card-title,
    .card-text {
        color: black;
    }
</style>

