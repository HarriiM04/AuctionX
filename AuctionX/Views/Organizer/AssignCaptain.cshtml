@model AuctionX.ViewModels.AssignCaptainViewModel

<h2>Select Captain</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="AssignCaptain" method="post">
    <input type="hidden" name="teamId" value="@Model.TeamId" />
    <input type="hidden" name="tournamentId" value="@Model.TournamentId" />

    <div class="row">
        @foreach (var player in Model.Players)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                 
                    <div class="card-body">
                        <h5 class="card-title">@player.Name</h5>
                   
                        <button type="submit" name="playerId" value="@player.PlayerId" class="btn btn-success btn-sm">Assign as Captain</button>
                    </div>
                </div>
            </div>
        }
    </div>
</form>
