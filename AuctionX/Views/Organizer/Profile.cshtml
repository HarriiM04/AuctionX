@model AuctionX.Models.Organizer

@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">
    <h2 class="mb-4">Organizer Profile</h2>

    <div class="card shadow-sm p-4">
        <p><strong>Name:</strong> @Model.User.Name</p>
        <p><strong>Email:</strong> @Model.User.Email</p>

        <p><strong>Mobile Number:</strong> @Model.MobileNumber</p>

        <div class="mt-3 d-flex gap-2">
            <a asp-action="EditProfile" asp-route-id="@Model.Id" class="btn btn-sm btn-warning">Edit Profile</a>
            <a asp-action="ChangePassword" asp-route-id="@Model.Id" class="btn btn-sm btn-danger">Change Password</a>
        </div>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success mt-3">
                @TempData["SuccessMessage"]
            </div>
        }

    </div>

    <a asp-action="Dashboard" class="btn btn-secondary mt-3">Back to Dashboard</a>
</div>
