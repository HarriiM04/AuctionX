@model string

<div id="instruction-warning" class="alert-box">
    <p>@Model</p>
</div>

<style>
    .alert-box {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #f44336;
        color: white;
        padding: 1.5rem 2rem;
        font-size: 1.2rem;
        font-weight: bold;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0,0,0,0.3);
        z-index: 9999;
        animation: slideIn 0.5s ease-out, fadeOut 0.5s ease-in 4.5s forwards;
    }

    @@keyframes slideIn {
        0%

    {
        transform: translate(-50%, -100%);
        opacity: 0;
    }

    100% {
        transform: translate(-50%, -50%);
        opacity: 1;
    }

    }

    @@keyframes fadeOut {
        to

    {
        opacity: 0;
        transform: translate(-50%, -70%);
    }

    }
</style>

<script>
    setTimeout(() => {
        const box = document.getElementById("instruction-warning");
        if (box) box.remove();
    }, 5500);
</script>
