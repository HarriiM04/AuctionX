@model AuctionX.ViewModels.CreateOrganizerViewModel
@{
    ViewData["Title"] = "Create Organizer";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <h2 class="text-center mb-4">Create New Organizer</h2>

            <form asp-action="CreateOrganizer" method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MobileNumber" class="form-label"></label>
                    <input asp-for="MobileNumber" class="form-control" />
                    <span asp-validation-for="MobileNumber" class="text-danger small"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Create Organizer</button>
                    <a asp-action="Organizers" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    @if (TempData["InstructionWarning"] != null)
    {
        @await Html.PartialAsync("_InstructionWarning", TempData["InstructionWarning"])
    }
}
