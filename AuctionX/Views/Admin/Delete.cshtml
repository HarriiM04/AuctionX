@model AuctionX.Models.Organizer

@{
    ViewData["Title"] = "Delete Organizer";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="text-center mb-4">
                <h2 class="text-danger">Delete Organizer</h2>
                <p class="lead">Are you sure you want to delete this organizer?</p>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <dl class="row">

                        <dt class="col-sm-4">Organizer Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.Name)</dd>

                        <dt class="col-sm-4">Mobile Number</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.MobileNumber)</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.Email)</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-danger">Yes, Delete</button>
                            <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
