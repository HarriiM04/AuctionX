@model AuctionX.Models.Player

@{
    ViewData["Title"] = "Delete Player";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="text-center mb-4">
                <h2 class="text-danger">Delete Player</h2>
                <p class="lead">Are you sure you want to delete this player?</p>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <dl class="row">

                        <dt class="col-sm-4">Player Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.Name)</dd>

                        <dt class="col-sm-4">Player Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.Email)</dd>

                        <dt class="col-sm-4">Player Photo</dt>
                        <dd class="col-sm-8">
                            <img src="/images/players/@Model.Photo" alt="Player Photo" class="img-fluid" />
                        </dd>

                        <dt class="col-sm-4">Mobile Number</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.MobileNumber)</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-4">Availability Status</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.AvailabilityStatus)</dd>

                        

                    </dl>

                    <form asp-action="DeletePlayer" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-danger">Yes, Delete</button>
                            <a asp-action="Players" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
