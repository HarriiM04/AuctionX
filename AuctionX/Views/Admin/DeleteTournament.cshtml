@model AuctionX.Models.Tournament

@{
    ViewData["Title"] = "Delete Tournament";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="text-center mb-4">
                <h2 class="text-danger">Delete Tournament</h2>
                <p class="lead">Are you sure you want to delete this tournament?</p>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Tournament Name</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Venue</dt>
                        <dd class="col-sm-8">@Model.Venue</dd>

                        <dt class="col-sm-4">Date</dt>
                        <dd class="col-sm-8">@Model.Date.ToShortDateString()</dd>

                        @if (!string.IsNullOrEmpty(Model.Logo))
                        {
                            <dt class="col-sm-4">Logo</dt>
                            <dd class="col-sm-8">
                                <img src="~/src/@Model.Logo" alt="Tournament Logo" class="img-fluid rounded" width="150" />
                            </dd>
                        }
                    </dl>

                    <form asp-action="DeleteTournamentConfirmed" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-danger">Yes, Delete</button>
                            <a asp-action="Tournaments" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
