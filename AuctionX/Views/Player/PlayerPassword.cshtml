@model PlayerPasswordViewModel

@{
    ViewData["Title"] = "Player Password";
}

<div class="container mt-5">
    <h2 class="mb-4">Change Password</h2>

    <form asp-action="PlayerPassword" method="post">
        <input type="hidden" asp-for="PlayerId" />
        <div class="mb-3">
            <label class="form-label">Original Password</label>
            <input asp-for="OriginalPassword" class="form-control" />
            <span asp-validation-for="OriginalPassword" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">New Password</label>
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">Confirm Password</label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Change Password</button>
        <a asp-action="Profile" class="btn btn-secondary">Cancel</a>
    </form>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-3">
            @TempData["SuccessMessage"]
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
